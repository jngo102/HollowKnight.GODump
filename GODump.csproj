	<ItemGroup>
		<Compile Include="Dump.cs" />
		<Compile Include="Extensions.cs" />
		<Compile Include="GODump.cs" />
		<Compile Include="Properties\AssemblyInfo.cs" />
		<Compile Include="SaveWav.cs" />
		<Compile Include="Settings.cs" />
